<script>
            $("#button0").on("click", function(){
                $(".even").show( function(){
                      $(".even").fadeOut(500);
                });
            });

            $("#button1").on("click", function(){
                $(".odd").hide( function(){
                      $(".odd").animate( {marginLeft += 20px}, 500 );
                });
            });
